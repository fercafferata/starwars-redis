      <h2 style="padding: 16px;"> Cargar Personajes</h2>
      <form action="/cargar" method="POST">
        <div class="row justify-content-center">
          <div class="col-4">
            <label>Personaje</label>
            <input type="text">
          </div>
          <div class="col-4">
            <label>Episodio</label>
            <select>
              {{#each episodios}}
                <option>{{this}}</option>
              {{/each}}
            </select>
            <button style="align-items: center; width: 90px; background-color: blue; color: white;", type="submit" id="cargarpersonaje">Cargar</button>          
          </div>
          </div>
        </div> 
      </form>
